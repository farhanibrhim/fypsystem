@model List<AcademicProgram>

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row pb-3">
                <div class="col-6"><h2>Manage <b>Academic Program</b></h2></div>
                <div class="col-6 text-end">
                    <a asp-controller="AcademicProgram" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-square"></i> Add New Program
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Category Name
                        </th>
                        <th>
                            Operation
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="AcademicProgram" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="AcademicProgram" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>

