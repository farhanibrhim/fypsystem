@using Fyp.Models.ViewModels
@model ChangeCommitteeStatusVM

<div>
    <h2>Change Committee Status</h2>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Lecturer.Id" hidden />
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.Name" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.Name" class="ms2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="Lecturer.IsCommitteeMember" class="form-select">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <label class="ms2">Committee Member?</label>
                </div>
                <div class="row pt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update Status</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
