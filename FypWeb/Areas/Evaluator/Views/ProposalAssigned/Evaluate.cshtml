@model Fyp.Models.Proposal

<div class="container">
    <h2>Evaluate Proposal</h2>

    <table class="table table-bordered">
        <tr>
            <th>Title</th>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <th>Document</th>
            <td><a href="@Url.Content("~/proposals/" + Model.ProposalDocumentUrl)" target="_blank">View Document</a></td>
        </tr>
        <tr>
            <th>Supervisor Comments</th>
            <td>@Model.SupervisorComments</td>
        </tr>
        <tr>
            <th>Evaluator 1 Comments</th>
            <td>@Model.Evaluator1Comments</td>
        </tr>
        <tr>
            <th>Evaluator 2 Comments</th>
            <td>@Model.Evaluator2Comments</td>
        </tr>
    </table>

    <form asp-action="Evaluate" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="form-group">
            <label for="status">Status</label>
            <select id="status" name="status" class="form-control">
                <option value="2">Accepted</option>
                <option value="3">Accepted with Conditions</option>
                <option value="4">Rejected</option>
            </select>
        </div>
        <div class="form-group">
            <label for="evaluatorComments">Evaluator Comments</label>
            <textarea id="evaluatorComments" name="evaluatorComments" class="form-control"></textarea>
        </div>
        <div class="mt-2">
            <button type="submit" class="btn btn-success">
                @(string.IsNullOrEmpty(Model.Evaluator1Comments) && string.IsNullOrEmpty(Model.Evaluator2Comments) ? "Submit" : "Re-submit")
            </button>
            <a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
        </div>
    </form>
</div>
