@using Fyp.Models.ViewModels
@model EditDomainVM

<h2>Edit Domain</h2>

<form method="post">
    <input asp-for="Lecturer.Id" hidden />

    <div class="form-group">
        <label asp-for="Lecturer.ApplicationUser.Name"></label>
        <input asp-for="Lecturer.ApplicationUser.Name" readonly class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SelectedDomain">Domain</label>
        <select asp-for="SelectedDomain" asp-items="Model.Domains" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</form>
