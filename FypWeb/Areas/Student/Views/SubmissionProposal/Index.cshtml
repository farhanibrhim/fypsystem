@model Fyp.Models.ViewModels.ProposalSubmissionVM

@functions {
    public string GetBadgeClass(Fyp.Models.ProposalStatus? status)
    {
        if (!status.HasValue)
        {
            return "badge bg-secondary";
        }

        switch (status.Value)
        {
            case Fyp.Models.ProposalStatus.Pending:
                return "badge bg-warning";
            case Fyp.Models.ProposalStatus.Accepted:
                return "badge bg-success";
            case Fyp.Models.ProposalStatus.AcceptedWithConditions:
                return "badge bg-info";
            case Fyp.Models.ProposalStatus.Rejected:
                return "badge bg-danger";
            default:
                return "badge bg-secondary";
        }
    }
}
<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div><h2>Submission Proposal</h2></div>
            </div>
        </div>
        <div class="card-body p-4">
            <form asp-action="Submit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="MuridId" />
                <div class="col-md-12">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="ProjectTypeId">Project Type</label>
                    <select asp-for="ProjectTypeId" class="form-control">
                        <option value="">Select Project Type</option>
                        @foreach (var type in ViewBag.ProjectTypes)
                        {
                            <option value="@type.Value">@type.Text</option>
                        }
                    </select>
                    <span asp-validation-for="ProjectTypeId" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="ProposalDocument"></label>
                    <input asp-for="ProposalDocument" type="file" class="form-control" />
                    <span asp-validation-for="ProposalDocument" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <p>Please download the proposal form below, fill up the form and place your signature and upload back to the system</p>
                    <a href="~/PSM1.PF_.05.docx" download>
                        Download PROJECT PROPOSAL & SUPERVISION CONSENT FORM (PSM1.PF.05)
                    </a>
                </div>
                <div class="mt-3">
                    @if (Model != null && Model.Result1 != null && Model.Result2 != null &&
                    (Model.Result1 == Fyp.Models.ProposalStatus.AcceptedWithConditions || Model.Result1 == Fyp.Models.ProposalStatus.Rejected) ||
                    (Model.Result2 == Fyp.Models.ProposalStatus.AcceptedWithConditions || Model.Result2 == Fyp.Models.ProposalStatus.Rejected))
                    {
                        @* <a asp-action="Resubmit" asp-route-id="@Model.MuridId" class="btn btn-warning">Resubmit Proposal</a> *@
                        <button asp-action="Resubmit" asp-route-id="@Model.MuridId"type="submit" class="btn btn-warning profile-button">
                            <i class=""></i>Re-Submit Proposal
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary profile-button">
                            <i class=""></i> Submit
                        </button>
                    }                   
                </div>
            </form>
            <hr />
            <h3>Proposal Status</h3>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Field</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Title</td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td>Project Type</td>
                        <td>@(Model.ProjectType != null ? Model.ProjectType.Name : "No Project Type selected")</td>
                    </tr>
                    <tr>
                        <td>Document</td>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.ProposalDocumentUrl))
                            {
                                <a href="~/proposals/@Model.ProposalDocumentUrl" target="_blank">View Proposal Document</a>
                            }
                            else
                            {
                                <span>No document uploaded</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Supervisor Comment</td>
                        <td>@Model.SupervisorComments</td>
                    </tr>
                    <tr>
                        <td>Evaluator 1 Comment</td>
                        <td>@Model.EvaluatorComments1</td>
                    </tr>
                    <tr>
                        <td>Evaluator 2 Comment</td>
                        <td>@Model.EvaluatorComments2</td>
                    </tr>
                    <tr>
                        <td>Evaluator 1 Result</td>
                        <td class="proposal-result">
                            <span class="@GetBadgeClass(Model.Result1)">@Model.Result1</span>
                        </td>
                    </tr>
                    <tr>
                        <td>Evaluator 2 Result</td>
                        <td class="proposal-result">
                            <span class="@GetBadgeClass(Model.Result2)">@Model.Result2</span>
                        </td>
                    </tr>
                </tbody>
            </table>

            
        </div>
    </div>
</div>
