@model Fyp.Models.ViewModels.StudentDetailsVM
@functions {
    public string GetBadgeClass(Fyp.Models.ProposalStatus? status)
    {
        if (!status.HasValue)
        {
            return "badge bg-secondary";
        }

        switch (status.Value)
        {
            case Fyp.Models.ProposalStatus.Pending:
                return "badge bg-warning";
            case Fyp.Models.ProposalStatus.Accepted:
                return "badge bg-success";
            case Fyp.Models.ProposalStatus.AcceptedWithConditions:
                return "badge bg-info";
            case Fyp.Models.ProposalStatus.Rejected:
                return "badge bg-danger";
            default:
                return "badge bg-secondary";
        }
    }
}
<div class="container">
    <h2>My Students</h2>

    <form id="filterForm" method="get">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <select id="academicSession" name="academicSession" class="form-control">
                        <option value="">Select Academic Session</option>
                        <option value="2022/2023">2022/2023</option>
                        <option value="2023/2024">2023/2024</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <select id="semester" name="semester" class="form-control">
                        <option value="">Select Semester</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">Filter</button>
                <button type="button" class="btn btn-secondary" onclick="resetFilter()">Reset Filter</button>
            </div>
        </div>
    </form>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>IC Number</th>
                <th>Proposal Title</th>               
                <th>Evaluator 1 Result</th>
                <th>Evaluator 2 Result</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.ApplicationUser?.Name</td>
                    <td>@student.ApplicationUser?.IcNumber</td>
                    <td>@(student.Proposal != null ? student.Proposal.Title : "No Proposal")</td>
                    <td class="proposal-result">
                        <span class="@GetBadgeClass(@student.Proposal?.Result1)">@student.Proposal?.Result1</span>
                    </td>
                    <td class="proposal-result">
                        <span class="@GetBadgeClass(@student.Proposal?.Result2)">@student.Proposal?.Result2</span>
                    </td>
                    <td>
                        @if (student.Proposal != null)
                        {
                            <a href="@Url.Action("ProposalDetails", new { id = student.Proposal.Id })" class="btn btn-secondary">View Proposal</a>
                        }
                        else
                        {
                            <span>No Proposal</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function resetFilter() {
        document.getElementById("academicSession").value = "";
        document.getElementById("semester").value = "";

        document.getElementById("filterForm").submit();
    }
</script>
